/* Ref: https://github.com/grahammiller/ResponsiveGridSystem */
$margin = 1.2%
.Grid
  clearfix()
  [class^="Col-"]
    float: left
    margin: 1% 0 1% $margin
    &:first-child
      margin-left: 0
for $p in (2..12)
  $colw = (100% - $margin * ($p - 1)) / $p
  for $n in (1..$p)
    $w = $colw * $n + $margin * ($n - 1)
    if $n == $p
      $w = 100%
    .Col-{$n}of{$p}
      width: decimal-floor($w, 2)
    +media(phone)
      .Col-{$n}of{$p}
        width: 100%
+media(phone)
  .Grid
    [class^="Col-"]
      margin: 1% 0
